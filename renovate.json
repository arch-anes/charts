{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "bumpVersion": "patch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "helm-values": {
    "fileMatch": [
      "charts/.+/values\\.ya?ml$"
    ]
  },
  "helmv3": {
    "fileMatch": [
      "charts/.+/Chart\\.ya?ml$"
    ]
  }
}